body {
   background-image: url("https://static.vecteezy.com/system/resources/previews/003/234/036/original/dark-silver-gray-background-with-cards-signs-vector.jpg");
   
}

h1 {
    text-shadow: 6px 10px 10px #000000;
    text-align: center; 
    font-family: Broadway;
    font-size: 50px;
    color:#ff0000;
}

p {
    text-shadow: 6px 10px 8px #000000;
    text-align: center;
    font-weight: bolder;
    font-family: Broadway;
}

button {
    box-shadow: 6px 10px 8px #000000;
    color: rgb(0, 222, 18);
    width: 160px; 
    height: 50px; 
    margin-left: 44%; 
    background-color:#760303; 
    cursor: pointer; 
    font-size: 20px;
    font-family: Broadway;
    text-shadow: 3px 3px 3px #460000; 
    border: 3px solid rgb(255, 255, 255); 
    border-radius: 35px;
}
